<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="com.globe3.tno.g3_mobile.fragments.RegisterFingerFragment"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:background="#FFF">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight">
                <LinearLayout
                    android:id="@+id/rl_staff_photo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_staff_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_person_black_48dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_staff_num"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_staff_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_staff_finger"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/iv_staff_finger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorSuccess"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_fingerprint_black_48dp" />
                    <ImageView
                        android:id="@+id/iv_staff_finger_count"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_finger_one"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorBorder"/>
            <RelativeLayout
                android:id="@+id/rl_steppers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_extract_node"
                    android:background="@drawable/stepper_node_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <ImageView
                        android:id="@+id/iv_extract_node_check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_black_24dp"
                        android:tint="#FFF"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_extract_node_num"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#FFF"
                        android:text="@string/num_1"
                        android:visibility="visible"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll_extract_node"
                    android:layout_toLeftOf="@+id/ll_verify_node"
                    android:layout_centerVertical="true">
                    <View
                        android:background="@color/colorMenuLight"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                    <View
                        android:id="@+id/line_step_1"
                        android:background="@color/colorSuccess"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:transformPivotX="0dp"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_verify_node"
                    android:background="@drawable/stepper_node_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <ImageView
                        android:id="@+id/iv_verify_node_check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_black_24dp"
                        android:tint="#FFF"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_verify_node_num"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#FFF"
                        android:text="@string/num_2"
                        android:visibility="visible"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll_verify_node"
                    android:layout_toLeftOf="@+id/ll_registration_node"
                    android:layout_centerVertical="true">
                    <View
                        android:background="@color/colorMenuLight"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                    <View
                        android:id="@+id/line_step_2"
                        android:background="@color/colorSuccess"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:transformPivotX="0dp"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_registration_node"
                    android:background="@drawable/stepper_node_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center|center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fingerprint_black_24dp"
                        android:tint="#FFF" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorMenuLight"
                    android:text="@string/msg_connecting_to_scanner" />
                <ImageView
                    android:id="@+id/iv_loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refresh_black_48dp"
                    android:contentDescription="@string/msg_connecting_to_scanner"
                    android:tint="@color/colorMenuLight"/>
                <ImageView
                    android:id="@+id/iv_finger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fingerprint_black_48dp"
                    android:contentDescription="@string/msg_scan_your_fingerprint"
                    android:tint="@color/colorAccentLight"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_action_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:clickable="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:background="?attr/selectableItemBackground"
                android:text="@string/label_refresh_scanner"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:clickable="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorBlueGrey"
                android:background="?attr/selectableItemBackground"
                android:text="@string/label_cancel" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>