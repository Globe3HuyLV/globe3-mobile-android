<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globe3.tno.g3_mobile.fragments.SelectFingerFragment"
    android:background="@color/windowBackground"
    android:id="@+id/ll_main_container">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight">
        <LinearLayout
            android:id="@+id/rl_staff_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_staff_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_person_black_48dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_staff_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorBlackLight"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_staff_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <RelativeLayout
            android:id="@+id/rl_finger_one"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/colorFingerSelect">
            <ImageView
                android:id="@+id/iv_finger_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorMenuLight"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fingerprint_black_48dp" />
            <ImageView
                android:id="@+id/iv_finger_num_one"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_finger_one_gray"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_finger_two"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/iv_finger_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorMenuLight"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fingerprint_black_48dp" />
            <ImageView
                android:id="@+id/iv_finger_num_two"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_finger_two_gray"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_finger_three"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/iv_finger_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorMenuLight"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fingerprint_black_48dp" />
            <ImageView
                android:id="@+id/iv_finger_num_three"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_finger_three_gray"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_finger_four"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/iv_finger_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorMenuLight"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fingerprint_black_48dp" />
            <ImageView
                android:id="@+id/iv_finger_num_four"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_finger_four_gray"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_finger_five"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/iv_finger_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorMenuLight"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fingerprint_black_48dp" />
            <ImageView
                android:id="@+id/iv_finger_num_five"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_finger_five_gray"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_start_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:background="?attr/selectableItemBackground"
        android:text="@string/label_start_registration"
        android:onClick="startRegister"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBorder"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorBlueGrey"
        android:background="?attr/selectableItemBackground"
        android:text="@string/label_cancel"
        android:onClick="cancelSelectFragment"/>
</LinearLayout>
