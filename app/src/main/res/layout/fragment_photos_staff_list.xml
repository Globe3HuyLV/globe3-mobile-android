<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.globe3.tno.g3_mobile.fragments.TimesheetStaffFragment">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_staff_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:scrollbars="vertical"/>
    <RelativeLayout
        android:id="@+id/rl_search_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_search_loader"
            android:src="@drawable/progress_indeterminate"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:contentDescription="@string/image_rotate_loader"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_no_record"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_marginTop="48dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlackLight"
            android:textSize="16sp"
            android:text="@string/msg_no_record_found"/>
    </RelativeLayout>
</RelativeLayout>
