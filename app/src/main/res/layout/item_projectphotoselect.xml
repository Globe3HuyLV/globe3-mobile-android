<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">
    <RelativeLayout
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:background="@drawable/border_blue">
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:src="@drawable/image_stub"
            android:layout_alignTop="@+id/chk_photo"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv_check_box"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_photo"
            android:tint="@color/colorAccentLight"/>
        <CheckBox
            android:id="@+id/chk_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_photo"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>