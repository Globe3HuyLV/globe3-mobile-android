<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globe3.tno.g3_mobile.activities.LocationCheckActivity">
    <include layout="@layout/include_base_loader" />
    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_staff_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
        <RelativeLayout
            android:id="@+id/rl_search_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_search_loader"
                android:src="@drawable/progress_indeterminate"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:contentDescription="@string/image_rotate_loader"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
