<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_photo_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globe3.tno.g3_mobile.com.globe3.tno.g3_mobile.activities.ProjectPhotoItemViewActivity">
    <include layout="@layout/include_base_loader" />
    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:id="@+id/gv_project_photo_items"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_project_photo_item_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add_white_24dp"
                app:layout_anchor="@id/gv_project_photo_items"
                app:layout_anchorGravity="bottom|right|end"/>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</RelativeLayout>
