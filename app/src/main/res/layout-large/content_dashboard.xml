<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.globe3.tno.g3_mobile.activities.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_margin="@dimen/dashboard_card_info_margin"
                    app:cardCornerRadius="2dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dashboard_card_info_height"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <LinearLayout
                            android:id="@+id/ll_server_connect"
                            android:layout_width="@dimen/dashboard_card_info_icon_width"
                            android:layout_height="@dimen/dashboard_card_info_icon_height"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_icon_server_connect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_cast_black_48dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_server_connect"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textColor="@color/colorBlackLight"
                                android:textSize="@dimen/dashboard_card_info_title"
                                android:text="@string/msg_online"/>
                            <TextView
                                android:id="@+id/tv_server_connect_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dashboard_card_info_desc"
                                android:text="@string/msg_server_connection"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_margin="@dimen/dashboard_card_info_margin"
                    app:cardCornerRadius="2dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dashboard_card_info_height"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="syncDown">
                        <LinearLayout
                            android:id="@+id/ll_last_sync"
                            android:layout_width="@dimen/dashboard_card_info_icon_width"
                            android:layout_height="@dimen/dashboard_card_info_icon_height"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_icon_last_sync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_sync_black_48dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_last_sync"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textColor="@color/colorBlackLight"
                                android:textSize="@dimen/dashboard_card_info_title"/>
                            <TextView
                                android:id="@+id/tv_last_sync_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dashboard_card_info_desc"
                                android:text="@string/msg_last_sync"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_margin="@dimen/dashboard_card_info_margin"
                    app:cardCornerRadius="2dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dashboard_card_info_height"
                        android:background="?attr/selectableItemBackground"
                        android:elevation="2dp"
                        android:onClick="requestGPS">
                        <LinearLayout
                            android:id="@+id/ll_gps"
                            android:layout_width="@dimen/dashboard_card_info_icon_width"
                            android:layout_height="@dimen/dashboard_card_info_icon_height"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_icon_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_map_black_48dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textColor="@color/colorBlackLight"
                                android:textSize="@dimen/dashboard_card_info_title"
                                android:text="@string/msg_off"/>
                            <TextView
                                android:id="@+id/tv_gps_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dashboard_card_info_desc"
                                android:text="@string/msg_gps_services"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_margin="@dimen/dashboard_card_info_margin"
                    app:cardCornerRadius="2dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dashboard_card_info_height"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <LinearLayout
                            android:id="@+id/ll_pending_sync"
                            android:layout_width="@dimen/dashboard_card_info_icon_width"
                            android:layout_height="@dimen/dashboard_card_info_icon_height"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_icon_pending_sync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_cloud_upload_black_48dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_pending_sync"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textColor="@color/colorBlackLight"
                                android:textSize="@dimen/dashboard_card_info_title"
                                android:text="0"/>

                            <TextView
                                android:id="@+id/tv_pending_sync_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dashboard_card_info_desc"
                                android:text="@string/msg_pending_sync"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:elevation="2dp"
            android:layout_marginTop="@dimen/dashboard_recent_margin"
            android:layout_marginLeft="@dimen/dashboard_recent_margin"
            android:layout_marginBottom="64dp"
            android:layout_marginRight="@dimen/dashboard_recent_margin"
            app:cardCornerRadius="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">
                <TextView
                    android:id="@+id/tv_recent_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dashboard_recent_margin"
                    android:layout_marginBottom="@dimen/dashboard_recent_margin"
                    android:textSize="@dimen/dashboard_card_info_title"
                    android:text="@string/msg_recent_activity"/>
                <LinearLayout
                    android:id="@+id/ll_recent_activity_list"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_recent_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"/>
                    <LinearLayout
                        android:id="@+id/ll_no_activity"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackLight"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:text="@string/label_no_activity"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_blocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyTransparent"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="closeMenuApps"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fam_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        fab:menu_animationDelayPerItem="30"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorAccentDark"
        fab:menu_colorRipple="@color/colorAccentLight"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/ic_apps_white_24dp"
        fab:menu_labels_colorNormal="@color/colorMenu"
        fab:menu_labels_colorPressed="@color/colorMenuDark"
        fab:menu_labels_colorRipple="@color/colorMenuLight"
        fab:menu_labels_cornerRadius="2dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="@color/colorWhite"
        fab:menu_labels_textSize="16sp"
        fab:menu_openDirection="up"
        fab:menu_showShadow="true"
        app:menu_shadowColor="@color/colorMenuLight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_timesheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_av_timer_white_24dp"
            android:onClick="goToTimesheet"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_timesheet"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_register_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fingerprint_white_24dp"
            android:onClick="goToRegisterFinger"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_register_finger"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_face_white_24dp"
            android:visibility="gone"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_register_face"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_insert_photo_white_24dp"
            android:onClick="goToPhotos"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_photos"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_location_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_white_24dp"
            android:onClick="goToLocationCheck"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_location_check"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_task_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assignment_white_24dp"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentDark"
            fab:fab_colorRipple="@color/colorAccentLight"
            fab:fab_label="@string/label_tasks_update"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
